<body>
  <img src="https://i.imgur.com/kTovFG6.png" alt="Logo" class="logo" />
  <h2>Redirecting to our official site...</h2>
  <p class="countdown">Redirecting in <span id="timer">5</span> seconds</p>

  <script>
    let time = 5;
    const timer = document.getElementById("timer");
    const redirectUrl = "https://t.me/yourchannel"; // ✅ 改这里！

    const countdown = setInterval(() => {
      time--;
      timer.textContent = time;
      if (time === 0) {
        clearInterval(countdown);
        window.location.href = redirectUrl;
      }
    }, 1000);
  </script>
